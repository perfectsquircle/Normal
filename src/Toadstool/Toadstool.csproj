<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <VersionPrefix>0.1.0</VersionPrefix>
    <TargetFrameworks>netstandard2.0;net451</TargetFrameworks>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageId>Toadstool</PackageId>
    <AssemblyName>Toadstool</AssemblyName>
    <RootNamespace>Toadstool</RootNamespace>
  </PropertyGroup>
  <PropertyGroup>
    <NoWarn>1701;1702;1705;CS1591</NoWarn>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="System.Data.Common" Version="4.3.0"/>
    <PackageReference Include="StyleCop.Analyzers" Version="1.0.2"/>
  </ItemGroup>
  <PropertyGroup>
    <CodeAnalysisRuleSet>$(ProjectDir)../../stylecop.ruleset</CodeAnalysisRuleSet>
  </PropertyGroup>
  <ItemGroup>
    <AdditionalFiles Include="$(ProjectDir)../../stylecop.json" Link="stylecop.json" />
  </ItemGroup>
</Project>